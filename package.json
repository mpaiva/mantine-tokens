{
  "name": "mantine-tokens",
  "version": "1.0.0",
  "description": "Style Dictionary token management for Mantine UI CSS variables",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "build": "node build.js",
    "build:verbose": "node build.js --verbose",
    "dev": "node build.js --watch",
    "watch": "node build.js --watch",
    "validate": "node scripts/validate-tokens.js",
    "clean": "rm -rf build/",
    "prebuild": "npm run clean",
    "lint": "eslint . --ext .js,.mjs",
    "lint:fix": "eslint . --ext .js,.mjs --fix",
    "format": "prettier --write \"**/*.{js,mjs,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,mjs,json,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "style-dictionary": "^4.3.3"
  }
}

{
  "$schema": "https://design-tokens.github.io/format/tokens.schema.json",
  "$description": "Feedback semantic API tokens - context-aware colors for system feedback and states",
  "feedback": {
    "$description": "Feedback tokens communicate system states and messages",
    "error": {
      "$description": "Error state feedback",
      "background": {
        "subtle": {
          "$value": "@feedback.error.background.subtle",
          "$type": "color",
          "$description": "Subtle error background"
        },
        "default": {
          "$value": "@feedback.error.background.default",
          "$type": "color",
          "$description": "Default error background"
        },
        "emphasis": {
          "$value": "@feedback.error.background.emphasis",
          "$type": "color",
          "$description": "Emphasized error background"
        }
      },
      "foreground": {
        "default": {
          "$value": "@feedback.error.foreground.default",
          "$type": "color",
          "$description": "Error text color"
        },
        "onEmphasis": {
          "$value": "@feedback.error.foreground.onEmphasis",
          "$type": "color",
          "$description": "Text on emphasized error background"
        }
      },
      "border": {
        "default": {
          "$value": "@feedback.error.border.default",
          "$type": "color",
          "$description": "Error border color"
        }
      },
      "icon": {
        "default": {

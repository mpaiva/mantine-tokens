{
  "font": {
    "family": {
      "sans": {
        "$value": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif",
        "$type": "fontFamily"
      },
      "mono": {
        "$value": "ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace",
        "$type": "fontFamily"
      }
    },
    "size": {
      "$type": "dimension",
      "xs": { "$value": "0.75rem" },
      "sm": { "$value": "0.875rem" },
      "md": { "$value": "1rem" },
      "lg": { "$value": "1.125rem" },
      "xl": { "$value": "1.25rem" },
      "2xl": { "$value": "1.5rem" },
      "3xl": { "$value": "1.875rem" },
      "4xl": { "$value": "2.25rem" },
      "5xl": { "$value": "3rem" }
    },
    "weight": {
      "$type": "fontWeight",
      "regular": { "$value": 400 },
      "medium": { "$value": 500 },
      "semibold": { "$value": 600 },
      "bold": { "$value": 700 }
    },
    "lineHeight": {
      "$type": "number",
      "xs": { "$value": 1.4 },
      "sm": { "$value": 1.45 },
      "md": { "$value": 1.55 },
      "lg": { "$value": 1.6 },
      "heading": { "$value": 1.3 }
    }
  }
}